<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="6dp"
        android:elevation="6dp"
        app:cardUseCompatPadding="true">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="15dp">

        <TextView
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:id="@+id/ranking_number"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:textAlignment="center">

        </TextView>
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp" android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:id="@+id/profile_picture"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:layout_toRightOf="@+id/ranking_number">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_name"
                android:text="default name"
                android:fontFamily="@font/nunito_bold"
                android:textSize="25sp"
                android:layout_toRightOf="@+id/profile_picture">
        </TextView>

        <TextView
                android:id="@+id/total_score"
                android:layout_width="64sp"
                android:layout_height="wrap_content"
                android:textSize="20sp"

                android:layout_below="@id/profile_name"
                android:layout_toRightOf="@id/profile_picture"

                android:layout_marginLeft="200dp" android:layout_marginTop="1dp">

        </TextView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>