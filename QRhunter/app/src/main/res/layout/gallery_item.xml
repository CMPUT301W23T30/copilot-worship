<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/QRmon_image"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/QRmon_name"
            app:layout_constraintStart_toEndOf="@+id/QRmon_image" app:layout_constraintTop_toTopOf="parent"
            android:textSize="14sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/QRmon_location"
            app:layout_constraintStart_toEndOf="@+id/QRmon_image" app:layout_constraintTop_toBottomOf="@+id/QRmon_name"
            android:textSize="10sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/QRmon_score"
            app:layout_constraintStart_toEndOf="@+id/QRmon_image" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.675" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <ImageButton
            android:layout_width="31dp"
            android:layout_height="22dp" app:srcCompat="@android:drawable/arrow_down_float"
            android:id="@+id/QRmon_dropdown"
            app:layout_constraintTop_toBottomOf="@+id/QRmon_location" app:layout_constraintStart_toEndOf="@+id/QRmon_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>