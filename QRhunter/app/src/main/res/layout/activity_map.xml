<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <Button
        android:id="@+id/map_back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/map_button_bg"
        android:drawableStart="@drawable/back_button_top_bar"
        android:contentDescription="Used to quit the activity"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/map_locate_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/map_button_bg"
        android:drawableBottom="@drawable/map_locate"
        android:contentDescription="Used to locate to current position"
        android:paddingBottom="2dp"/>

    <ToggleButton
        android:id="@+id/map_follow_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/map_follow_bg"
        android:drawableLeft="@drawable/map_follow"
        android:textOff=""
        android:textOn=""
        android:paddingTop="7dp"
        android:paddingLeft="2dp"/>

</RelativeLayout>
