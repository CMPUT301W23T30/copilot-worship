<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <include layout="@layout/navbar" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/user_page_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_icon__profile_circle_" />

    <TextView
        android:id="@+id/user_page_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JANEDOE"
        android:textAlignment="viewStart"
        android:textSize="32dp"
        android:textStyle="bold"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.242" />


    <LinearLayout
        android:id="@+id/user_profile_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_border"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_page_user_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="TOTAL SCORE"
            android:textAlignment="textEnd"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/user_page_total_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="N/A"
            android:textAlignment="textEnd"
            android:textSize="34sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_total"
        app:layout_constraintVertical_bias="0.183">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="BEEFIEST QR"
            android:textAlignment="textEnd"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/user_profile_strongest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="N/A"
            android:textAlignment="textEnd"
            android:textSize="24sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="SQUISHIEST QR"
            android:textAlignment="textEnd"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/user_profile_weakest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="N/A"
            android:textAlignment="textEnd"
            android:textSize="24sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="CONTACT INFO"
            android:textAlignment="textEnd"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/user_profile_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="N/A"
            android:textAlignment="textEnd"
            android:textSize="24sp"></TextView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>